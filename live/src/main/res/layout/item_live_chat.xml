<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@drawable/bg_live_chat_item"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingTop="2dp"
    android:paddingRight="5dp"
    android:paddingBottom="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:text="啊啊啊啊" />

        <ImageView
            android:id="@+id/level"
            android:layout_width="28dp"
            android:layout_height="14dp"
            android:layout_marginLeft="3dp"
            tools:src="@mipmap/ic_level_1" />

        <ImageView
            android:id="@+id/vip"
            android:layout_width="28dp"
            android:layout_height="14dp"
            android:layout_marginLeft="3dp"
            android:src="@mipmap/icon_live_chat_vip" />

        <ImageView
            android:id="@+id/manage"
            android:layout_width="19dp"
            android:layout_height="14dp"
            android:layout_marginLeft="3dp"
            android:src="@mipmap/icon_live_chat_m" />

        <ImageView
            android:id="@+id/guard"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="2dp"
            tools:src="@mipmap/icon_live_chat_guard_2" />

        <ImageView
            android:id="@+id/liang"
            android:layout_width="19dp"
            android:layout_height="14dp"
            android:layout_marginLeft="3dp"
            android:src="@mipmap/icon_live_chat_liang" />
    </LinearLayout>


    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F1F1F1"
        android:textSize="14dp"
        tools:text="啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊" />


</LinearLayout>

